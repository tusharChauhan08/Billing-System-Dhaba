{{#if updation}}
    <div class="error-div">
        <span class="error">Please enter all the details!</span>
    </div>
{{/if}}
<div class="form-div">
    <form action="/adding" method="post">
        <div class="heading-div">
            <h3>Welcome</h3>
            <p>Please enter the dish you want to add in menu.</p>
        </div>
        <div class="select-div1">
            <label for="">Quantity:</label>
            <select name="quantity" id="">
                <option value="select">Select</option>
                <option value="Half">Half</option>
                <option value="Full">Full</option>
            </select>
        </div>
        <div class="dish-div">
            <label for="">Dish-Name:</label>
            <input type="text" placeholder="Enter Dish name" name="dish">
        </div>
        <div class="price-div">
            <label for="">Price:</label>
            <input type="text" placeholder="Enter the price" name="price">
        </div>
        <div class="date-div">
            <label for="">Date:</label>
            <input type="date" name="date">
        </div>
        <div class="submit-div">
            <input type="submit" value="Added">
            <span>Back to the Home Page? <a href="/home">Home</a></span>
        </div>
    </form>
</div>