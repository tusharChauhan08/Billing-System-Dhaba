{{#if updation}}
    <div class="error-div">
        <span class="error">Please enter all the details!</span>
    </div>
{{/if}}
<div class="delete-div">
    <form action="/delete" method="post">
        <div class="heading-div">
            <h3>Welcome</h3>
            <p>Please enter the dish name you want to delete.</p>
        </div>
        <div class="select-div">
            <label for="">Quantity:</label>
            <select name="quantity" id="">
                <option value="">Select</option>
                <option value="Half">Half</option>
                <option value="Full">Full</option>
            </select>
        </div>
        <div class="dish-div">
            <label for="">Dish:</label>
            <input type="text" placeholder="Enter Dish name you want to edit" name="dish">
        </div>
        <div class="submit-div">
            <input type="submit" value="Delete">
            <span>Back to the Home Page? <a href="/home">Home</a></span>
        </div>
    </form>
</div>