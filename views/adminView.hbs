<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View</title>
    <link rel="stylesheet" href="/adminView.css" media="all" type="text/css">
    <link rel="stylesheet" href="/css/all.min.css" media="all" type="text/css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
</head>

<body>
    <div class="main-div">
        {{>navbar}}
        <div class="table-div">
            <table class="Admin-Table">
                <thead>
                    <tr>
                        <td>Sr-no.</td>
                        <td>Dish Name</td>
                        <td>Quantity</td>
                        <td>Price</td>
                        <td>Date</td>
                        <td>Button</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each result}}
                        <tr>
                            <td>{{__v}}</td>
                            <td>{{Dish_Name}}</td>
                            <td>{{Quantity}}</td>
                            <td>{{Price}}</td>
                            <td>{{Date}}</td>
                            <td>
                                <a class="edit" href="/edit">Edit</a>
                                <a href="/delete" class="delete">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#if deletion}}
            {{>delete}}
        {{/if}}
        {{#if employeer}}
            {{>employee}}
        {{/if}}
        {{#if dishe}}
            {{>dishes}}
        {{/if}}
        {{#if updateDish}}
            {{>editDishes}}
        {{/if}}
    </div>
    <script src="/JQuery/jquery-3.6.1.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.Admin-Table').DataTable();
        });      
    </script>
</body>

</html>